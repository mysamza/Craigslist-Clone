<body>


    <!-- Page Content -->
    <div class="container">

        <div class="row">

         

            <div class="col-lg-9">

                <div class="card mt-4">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

                       
                        <div class="carousel-inner">
                            
                            {{#each ad.imgdest}}
                            {{#if @first}}
                            <div class="carousel-item active">
                                {{else}}
                                <div class="carousel-item">
                                    {{/if}}
                                    <img class="d-block w-100" src="http://localhost:3000/images/{{../ad._id}}/{{this}}" alt="First slide">
                                </div>
                               
                                {{/each}}
                            </div>
                       
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    <div class="card-body">
                        <i style="float:right;" class="far fa-heart"></i>

                        <h4 class="card-title">{{ad.heading}}</h4>
                        <p class="card-text">{{ad.opdesc}}</p>
                        <button type="button" style="font-size: 12px;" class="btn btn-outline-secondary">Metal {{ad.metal}} </button>
                        <button type="button" style="font-size: 12px;" class="btn btn-outline-secondary">Weight {{ad.weight}} {{ad.unit}} </button>
                        <button type="button" style="font-size: 12px;" class="btn btn-outline-secondary">Deliver By {{ad.deliverydate}} </button>
                        <small class="text-muted" style="float:right; text-decoration: underline; font-size:12px; position:absolute; bottom:5%; right:1%;">posted on {{ad.displaydate}}</small>
                    </div>
                </div>
